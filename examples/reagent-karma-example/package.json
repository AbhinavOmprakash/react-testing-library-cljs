{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "sc": "shadow-cljs",
    "server": "shadow-cljs stop && shadow-cljs start",
    "start": "shadow-cljs watch app",
    "fmt:sort-package-json": "sort-package-json package.json",
    "cards": "shadow-cljs watch cards",
    "build": "yarn clean && shadow-cljs release app",
    "test": "shadow-cljs compile test && node out/test.js",
    "test:watch": "shadow-cljs watch test --config-merge \"{:autorun true}\"",
    "test:karma:compile": "shadow-cljs watch karma --config-merge \"{:autorun true}\"",
    "test:karma:run": "karma start --reporters junit,dots",
    "test:karma:watch": "concurrently --prefix none \"npm run test:karma:run\" \"npm run test:karma:compile\"",
    "e2e": "shadow-cljs compile e2e && node out/e2e.js",
    "report": "shadow-cljs run shadow.cljs.build-report app report.html",
    "lint": "clj-kondo --lint src",
    "fmt:clj": "zprint-clj --hang -i \"./src/**/*.{clj,cljs,cljc,edn}\" -o ./ && zprint-clj -i \"./*.edn\" -o ./",
    "clean": "rimraf public/js",
    "fmt": "run-s fmt:clj fmt:sort-package-json"
  },
  "dependencies": {
    "create-react-class": "~15.6.3",
    "karma": "6.4.2",
    "karma-chrome-launcher": "3.2.0",
    "karma-cli": "2.0.0",
    "karma-cljs-test": "0.1.0",
    "karma-junit-reporter": "2.0.1",
    "react": "~16.8.0",
    "react-dom": "~16.8.0",
    "sort-package-json": "2.5.1"
  },
  "devDependencies": {
    "@testing-library/dom": "9.3.1",
    "@testing-library/react": "12.1.5",
    "clj-kondo": "2020.11.7",
    "concurrently": "8.0.1",
    "highlight.js": "10.1.1",
    "jsdom": "^16.2.2",
    "jsdom-global": "^3.0.2",
    "marked": "^1.1.0",
    "npm-run-all": "4.1.5",
    "rimraf": "~3.0.2",
    "serve-handler": "~6.1.3",
    "shadow-cljs": "2.25.2",
    "taiko": "~1.0.12",
    "taiko-diagnostics": "~0.4.0",
    "zprint-clj": "~0.8.0"
  }
}
